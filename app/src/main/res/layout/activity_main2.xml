<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Main2Activity">

    <ImageView
        android:id="@+id/idImageButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        android:gravity="bottom"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/kempaka" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="KELUARGA MAHASISWA PELAJAR KARAWANG"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="@dimen/margin_menu_main"
        android:layout_weight="2"
        android:padding="5dp"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_menu_subMain"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/idbtnActivity1"
                android:layout_width="@dimen/width_menu_card"
                android:layout_height="160dp"
                android:layout_margin="@dimen/margin_menu_card"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:background="@color/colorBlue">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_menu_image"
                        android:layout_weight="2"
                        android:padding="@dimen/menu_image_padding"
                        android:src="@drawable/ic_assignment_black_24dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_menu_textMenu"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="SEJARAH KEMPAKA"
                        android:textSize="@dimen/textSize_menu_main" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/idbtnActivity2"
                android:layout_width="@dimen/width_menu_card"
                android:layout_height="160dp"
                android:layout_margin="@dimen/margin_menu_card"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:background="@color/colorBlue">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_menu_image"
                        android:layout_weight="2"
                        android:padding="@dimen/menu_image_padding"
                        android:src="@drawable/ic_account" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_menu_textMenu"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="ADRT KEMPAKA"
                        android:textSize="@dimen/textSize_menu_main" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/idbtnActivity3"
                android:layout_width="@dimen/width_menu_card"
                android:layout_height="160dp"
                android:layout_margin="@dimen/margin_menu_card"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:background="@color/colorBlue">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_menu_image"
                        android:layout_weight="2"
                        android:padding="@dimen/menu_image_padding"
                        android:src="@drawable/ic_call_split_black_24dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_menu_textMenu"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="ARAH GERAK"
                        android:textSize="@dimen/textSize_menu_main" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/idbtnActivity4"
                android:layout_width="@dimen/width_menu_card"
                android:layout_height="160dp"
                android:layout_margin="@dimen/margin_menu_card"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:background="@color/colorBlue">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_menu_image"
                        android:layout_weight="2"
                        android:padding="@dimen/menu_image_padding"
                        android:src="@drawable/ic_people" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_menu_textMenu"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:text="PENDATAAN"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/textSize_menu_main" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.LinearLayoutCompat>